<!DOCTYPE html>
<html lang="zxx">
<%- include('../partials/user-header')%>
<body>
    <!-- Page Preloder -->
    <!-- Header Section End -->
    <%- include('../partials/head')%>
    <!-- Shop Details Section Begin -->
    <section class="shop-details">
        <div class="product__details__pic">
            <div class="container">
                <div class="row">
                    <div class="col-lg-1 col-md-3">
                        <ul class="nav nav-tabs" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" data-toggle="tab" href="#tabs-1" role="tab">
                                    <div class="product__thumb__pic set-bg">
                                        <img onclick="showImage('tab1')" src="/images/productImages/<%=product.image[0]%>" alt="">
                                    </div>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="tab" href="#tabs-2" role="tab">
                                    <div class="product__thumb__pic set-bg">
                                        <img onclick="showImage('tab2')"  src="/images/productImages/<%=product.image[1]%>" alt="">
                                    </div>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="tab" href="#tabs-3" role="tab">
                                    <div class="product__thumb__pic set-bg">
                                        <img onclick="showImage('tab3')"  src="/images/productImages/<%=product.image[2]%>" alt="">
                                    </div>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="tab" href="#tabs-4" role="tab">
                                    <div class="product__thumb__pic set-bg">
                                        <img onclick="showImage('tab4')"  src="/images/productImages/<%=product.image[3]%>" alt="">
                                        <i class="fa fa-play"></i>
                                    </div>
                                </a>
                            </li>
                        </ul>
                    </div>                 
                    <div class="col-lg-7 col-md-6">
                        <div class="tab-content">
                            <div class="" id="tabs-1" role="tabpanel">
                                <div class="product__details__pic__item">
                                    <a href="/images/productImages/<%=product.image[0]%>" class="MagicZoom">
                                    <img height="380px" width="340px" src="/images/productImages/<%=product.image[0]%>" alt=""></a>
                                </div>
                            </div>
                            <div class="" id="tabs-2" role="tabpanel" style="display: none;">
                                <div class="product__details__pic__item">
                                    <a href="/images/productImages/<%=product.image[1]%>" class="MagicZoom">
                                    <img height="380px" width="340px" src="/images/productImages/<%=product.image[1]%>" alt="">
                                </div>
                            </div>
                            <div class="" id="tabs-3" role="tabpanel" style="display: none;">
                                <div class="product__details__pic__item">
                                    <a href="/images/productImages/<%=product.image[2]%>" class="MagicZoom">
                                    <img height="380px" width="340px" src="/images/productImages/<%=product.image[2]%>" alt="">
                                </div>
                            </div>
                            <div class="" id="tabs-4" role="tabpanel" style="display: none;">
                                <div class="product__details__pic__item">
                                    <a href="/images/productImages/<%=product.image[3]%>" class="MagicZoom">
                                    <img height="380px" width="340px" src="/images/productImages/<%=product.image[3]%>" alt="">
                                </div>
                            </div>
                        </div>
                        <script>
                            const tabs1 = document.querySelector('#tabs-1')
                            const tabs2 = document.querySelector('#tabs-2')
                            const tabs3 = document.querySelector('#tabs-3')
                            const tabs4 = document.querySelector('#tabs-4')
                            function showImage(tabs){
                                if(tabs == 'tab1'){
                                    tabs1.style.display = 'block'
                                    tabs2.style.display = 'none'
                                    tabs3.style.display = 'none'
                                    tabs4.style.display = 'none'
                                }else if (tabs == 'tab2'){
                                    tabs1.style.display = 'none'
                                    tabs2.style.display = 'block'
                                    tabs3.style.display = 'none'
                                    tabs4.style.display = 'none'
                                }else if(tabs == 'tab3'){
                                    tabs1.style.display = 'none'
                                    tabs2.style.display = 'none'
                                    tabs3.style.display = 'block'
                                    tabs4.style.display = 'none'
                                }else{
                                    tabs1.style.display = 'none'
                                    tabs2.style.display = 'none'
                                    tabs3.style.display = 'none'
                                    tabs4.style.display = 'block'
                                }
                            }
                        </script>
                    </div>
                    <div class="col-lg-4 col-md-6 col-6">
                        <div class="product__details__text">
                            <h4><%=product.name%></h4>
                            <div class="rating">
                            </div>
                            <h3>₹<%=product.price%></h3>
                            <p><%=product.description%></p>
                            <div class="product__details__cart__option">
                                <a onclick="addtoCart('<%=product._id%>','<%=product.name%>','<%=product.price%>','<%=product.image[0]%>')" href="" class="primary-btn">add to cart</a>
                            </div>
                            <div class="product__details__btns__option">
                                <a onclick="addtoWishlist('<%=product._id%>','<%=product.name%>','<%=product.price%>','<%=product.category%>','<%=product.image[0]%>')" href="">add to wishlist <i class="fa fa-heart"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Shop Details Section End -->

    <!-- Related Section Begin -->
    <section class="related spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="related-title">Related Product</h3>
                </div>
            </div>
            <div class="row product__filter">
                <% products.forEach(function(product){%>
                    <div class="col-lg-3 col-md-6 col-sm-6 col-md-6 col-sm-6 mix new-arrivals">
                        <div class="product__item">
                            <div class="product__item__pic set-bg text-center">
                                <a href="/product-details/<%=product._id%>"><img height="250px"
                                        src="/images/productImages/<%=product.image[0]%>" alt=""></a>
                                <ul class="product__hover">
                                    <li><a onclick="addtoWishlist('<%=product._id%>','<%=product.name%>','<%=product.price%>','<%=product.category%>')"
                                            href=""><img src="images/icon/heart.png" alt=""></a></li>
                                    <li><a href="/product-details/<%=product._id%>"><img
                                                src="images/icon/search.png" alt=""></a></li>
                                </ul>
                            </div>
                            <div class="product__item__text">
                                <h6 class="text-center">
                                    <%=product.name%>
                                </h6>
                                <a onclick="addtoCart('<%=product._id%>','<%=product.name%>','<%=product.price%>')"
                                    href="" class="add-cart">+ Add To Cart</a>
                                <h5 class="text-center">₹<%=product.price%>
                                </h5>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
    </section>
    <!-- Related Section End -->

	<%- include('../partials/user-footer')%>
</body>

</html>