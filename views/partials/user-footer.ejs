<script>

    async function addtoCart(productId, productName, productPrice, productStock,productImage) {
        // window.alert("one")
        $.ajax({
            url: `/addtoCart/${productId}`,
            data: {
                Id: productId,
                image: productImage,
                name: productName,
                price: productPrice,
                stock: productStock
            },
            method: "post",
            success: (response) => {
                if (response.added) {
                    Swal.fire({
                        position: "center",
                        icon: "success",
                        title: " Added ",
                        customClass: "swal-wide",
                        showConfirmButton: true
                    });
                }
                else if (response.loginErr) {
                    Swal.fire({
                        position: "center",
                        icon: "error",
                        title: "please login first",
                        customClass: "swal-wide",
                        showConfirmButton: true
                    });

                } else if (response.exist) {
                    Swal.fire({
                        position: "center",
                        icon: "success",
                        title: " already exist",
                        customClass: "swal-wide",
                        showConfirmButton: true
                    });

                } else if (response.noAvailability) {
                    Swal.fire({
                        position: "center",
                        icon: "error",
                        title: "Out of Stock",
                        customClass: "swal-wide",
                        showConfirmButton: true
                    });
                }
            }
        })
    }
</script>

<script>

    async function addtoWishlist(productId, productName, productImage, productPrice,productStock, productCategory) {
        $.ajax({
            url: `/addtoWishlist/${productId}`,
            data: {
                Id: productId,
                name: productName,
                image: productImage,
                price: productPrice,
                stock:productStock,
                category: productCategory,
            },
            method: "post",
            success: (response) => {
                if (response.added) {
                    Swal.fire({
                        position: "center",
                        icon: "success",
                        title: " Added ",
                        customClass: "swal-wide",
                        showConfirmButton: false,
                        timer: 3000,
                    });
                }
                else if (response.loginerr) {
                    Swal.fire({
                        position: "center",
                        icon: "error",
                        title: "please login first",
                        customClass: "swal-wide",
                        showConfirmButton: false,
                        timer: 1000,
                    });
                } else if (response.exist) {
                    Swal.fire({
                        position: "right-end",
                        icon: "success",
                        title: " already exist",
                        customClass: "swal-wide",
                        showConfirmButton: false,
                        timer: 3000,
                    });
                }
            }
        })
    }
</script>

