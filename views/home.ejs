<!DOCTYPE html>
<html lang="zxx">

<%- include('./partials/user-header')%>

    <body>
        <!-- Header Section Begin -->
        <%- include('./partials/head')%>
            <!-- Header Section End -->

            <!-- Hero Section Begin -->
            <section class="hero">
                <div class="hero__slider owl-carousel">
                    <% banner.forEach(function(bannerImg){%>
                        <div class="hero__items set-bg" data-setbg="/images/productImages/<%=bannerImg.image[0]%>">
                            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a> -->
                            <div class="container">
                                <div class="row">
                                    <div class="col-xl-5 col-lg-7 col-md-8">
                                        <div class="hero__text">
                                            <h6>
                                                <%=bannerImg.Des1%>
                                            </h6>
                                            <h2>
                                                <%=bannerImg.Des2%>
                                            </h2>
                                            <p>
                                                <%=bannerImg.Des3%>
                                            </p>
                                            <a href="/shop" class="primary-btn">Shop now <span
                                                    class="arrow_right"></span></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                </div>
            </section>
            <!-- Hero Section End -->

            <!-- Product Section Begin -->
            <section class="product spad">
                <div class="container">
                    <div class="row mt-5">
                        <div class="col-lg-12">
                            <ul class="filter__controls">
                                <li class="active" data-filter="*">
                                    <h2>New Arrivals</h2>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="row product__filter">
                        <% products.forEach(function(product){%>
                            <div class="col-lg-3 col-md-6 col-sm-6 col-md-6 col-sm-6 mix new-arrivals">
                                <div class="product__item">
                                    <div class="product__item__pic set-bg text-center">
                                        <a href="/product-details/<%=product._id%>"><img height="250px"
                                                src="/images/productImages/<%=product.image[0]%>" alt=""></a>
                                        <ul class="product__hover">
                                            <li><a onclick="addtoWishlist('<%=product._id%>','<%=product.name%>','<%=product.image[0]%>','<%=product.price%>','<%=product.category%>')"
                                                    href=""><img src="/images/icon/heart.png" alt=""></a></li>
                                            <li><a href="/product-details/<%=product._id%>"><img
                                                        src="/images/icon/search.png" alt=""></a></li>
                                        </ul>
                                    </div>
                                    <div class="product__item__text text-center">
                                        <h6>
                                            <%=product.name%>
                                        </h6>
                                        <a onclick="addtoCart('<%=product._id%>','<%=product.name%>','<%=product.price%>','<%=product.stock%>','<%=product.image[0]%>')"
                                            href="" class="">+ Add To Cart</a>
                                        <h5>â‚¹<%=product.price%>
                                        </h5>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                    <div class="text-center">
                        <a class="button-size btn btn-info mx-5 my-5" href="/shop" role="button">Show More</a>
                    </div>
                </div>
            </section>

            <!-- Latest Blog Section Begin -->
            <section class="latest spad">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="section-title">
                                <span>Latest News</span>
                                <h2>New Trends Technology</h2>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <% newses.forEach(function(news){%>
                            <div class="col-lg-4 col-md-6 col-sm-6">
                                <div class="blog__item">
                                    <div class="blog__item__pic set-bg">
                                        <a href="/news/<%=news._id%>"><img height="250px" width="250px"
                                                class="rounded mx-auto d-block"
                                                src="/images/productImages/<%=news.Image[0]%>" alt=""></a>
                                    </div>
                                    <div class="blog__item__text">
                                        <span><img src="images/icon/calendar.png" alt="">
                                            <%=news.Date%>
                                        </span>
                                        <h5>
                                            <%=news.Title%>
                                        </h5>
                                        <a href="/news/<%=news._id%>">Read More</a>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                </div>
            </section>
            <!-- Latest Blog Section End -->

            <%- include('./partials/user-footer')%>
    </body>

</html>