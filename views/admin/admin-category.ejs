<%- include('../partials/admin-sidebar')%>

        <!-- Content wrapper -->
        <div class="content-wrapper">
          <!-- Content -->

          <div class="container-xxl flex-grow-1 container-p-y">
            <form action="/admin/add-category" method="post">
              <div class="col-md-6">
                <div class="card mb-4">
                  <h5 class="card-header">Category</h5>
                  <div class="card-body">
                    <div>
                      <label for="defaultFormControlInput" class="form-label">Category Name</label>
                      <input type="text" class="form-control" placeholder="Name" name="name"
                        aria-describedby="defaultFormControlHelp" required />
                      <div class="my-3 text-left">
                        <button type="submit" class="add btn btn-success">Add Category</a>
                          <iconify-icon icon="material-symbols:category-outline" class="fs-5"></iconify-icon>
                        </button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </form>
            <!-- Hoverable Table rows -->
            <div class="card">
              <div class="table-responsive text-nowrap">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>SI No</th>
                      <th>Category Name</th>
                      <th></th>
                      <th></th>
                      <th></th>
                      <th></th>
                    </tr>
                  </thead>
                  <tbody class="table-border-bottom-0">
                    <% let index=1 %>
                      <% categories.forEach(function(category){%>
                        <tr>
                          <td>
                            <%= index++ %>
                          </td>
                          <td>
                            <%=category.cat_name%>
                          </td>
                          <td></td>
                          <td></td>
                          <td></td>
                          <td><a href="/admin/edit-category/<%=category._id%>" class="btn btn-info">Edit</a></td>
                          <% if(category.delete){%>
                            <td>
                              <form action="/admin/un-delete-category/<%=category._id%> " method="post">
                                <button type="submit" class="px-3 py-1 btn btn-danger">Undo</button>
                              </form>
                            </td>
                            <%}else{%>
                              <td>
                                <form action="/admin/delete-category/<%=category._id%> " method="post">
                                  <button type="submit" class="px-3 py-1 btn btn-danger">Delete</button>
                                </form>
                              </td>
                              <%}%>
                        </tr>
                        <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
            <!--/ Hoverable Table rows -->
          </div>
          <div class="content-backdrop fade"></div>
        </div>