<%- include('../partials/admin-sidebar')%>

        <!-- Content wrapper -->
        <div class="content-wrapper">
          <!-- Content -->

          <div class="container-xxl flex-grow-1 container-p-y">
            <div class="my-4 text-right">
              <button type="button" class="add btn btn-success">
                <a href="/admin/add-news" class="text-white">Add News</a>
                <iconify-icon icon="material-symbols:menu-book-outline" class="fs-5"></iconify-icon>
              </button>
            </div>
            <!-- Hoverable Table rows -->
            <div class="card">
              <div class="table-responsive text-nowrap">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>SI No</th>
                      <th>Image</th>
                      <th>Date</th>
                      <th>Title</th>
                      <th>Description</th>
                      <th></th>
                      <th></th>
                    </tr>
                  </thead>
                  <tbody class="table-border-bottom-0">
                    <% let index=1 %>
                      <% newses.forEach(function(news){%>
                        <tr>
                          <td>
                            <%= index++ %>
                          </td>
                          <td><img height="auto" width="120px" src="/images/productImages/<%=news.Image[0]%>" alt="">
                          </td>
                          <td>
                            <%=news.Date%>
                          </td>
                          <td>
                            <%=news.Title%>
                          </td>
                          <td>
                            <%=news.Description%>
                          </td>
                          <td><a href="/admin/edit-news/<%=news._id%>" class="btn btn-info">Edit</a></td>
                          <td><a href="/admin/delete-news/<%=news._id%>" class="btn btn-danger"
                              onclick="return confirm('Are you want to delete <%=news.Title%> ? ')">Delete</a></td>
                        </tr>
                        <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
            <!--/ Hoverable Table rows -->
          </div>
          <div class="content-backdrop fade"></div>
        </div>