<%- include('../partials/admin-sidebar')%>

        <body class="bg-light">
          <div class="container mt-4">
            <div class="row">
              <div class="col-md-6">
                <h2 class="text-dark">Add News</h2>
                <form action="/admin/add-news" method="post" enctype="multipart/form-data">
                  <label class="text-light" for="">Image</label>
                  <input type="file" name="image" accept="image/*" class="form-control" required>

                  <label class="text-light" for="">Date</label>
                  <input type="text" name="date" class="form-control" required>

                  <label class="text-light" for="">Title</label>
                  <input type="text" name="title" class="form-control" required>

                  <label class="text-light" for="">Description</label>
                  <input type="text" name="description" class="form-control" required>

                  <button type="submit" class="btn btn-success mt-4">Submit</button>
                </form>
              </div>
            </div>
          </div>