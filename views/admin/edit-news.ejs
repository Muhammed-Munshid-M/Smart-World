<%- include('../partials/admin-sidebar')%>

        <body class="bg-light">
          <div class="container mt-4">
            <div class="row">
              <div class="col-md-6">
                <h2 class="text-dark">Edit News</h2>
                <form action="/admin/edit-news/<%=News._id %>" method="post" enctype="multipart/form-data">
                  <label class="text-light" for="">Image</label>
                  <input type="file" name="image" value="<%=News.Image%>" class="form-control">

                  <label class="text-light" for="">Date</label>
                  <input type="text" name="date" value="<%=News.Date%>" class="form-control">

                  <label class="text-light" for="">Title</label>
                  <input type="text" name="title" value="<%=News.Title%>" class="form-control">

                  <label class="text-light" for="">Description</label>
                  <input type="text" name="description" value="<%=News.Description%>" class="form-control">

                  <button type="submit" class="btn btn-success mt-4">Submit</button>
                </form>
              </div>
            </div>
          </div>