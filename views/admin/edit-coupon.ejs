<%- include('../partials/admin-sidebar')%>

        <body class="bg-light">
          <div class="container mt-4">
            <div class="row">
              <div class="col-md-6">
                <h2 class="text-dark">Edit Coupon</h2>
                <form action="/admin/edit-coupon/<%=Coupon._id %>" method="post">

                  <label class="text-light" for="">Coupon Name</label>
                  <input type="text" name="name" value="<%=Coupon.name%>" class="form-control">

                  <label class="text-light" for="">Coupon Code</label>
                  <input type="text" name="code" value="<%=Coupon.code%>" class="form-control">

                  <label class="text-light" for="">Discount Percentage</label>
                  <input type="number" name="discount" value="<%=Coupon.discount%>" class="form-control">

                  <label class="text-light" for="">Minimum Purchase Amount</label>
                  <input type="number" name="min_amount" value="<%=Coupon.min_amount%>" class="form-control">

                  <label class="text-light" for="">Maximum Discount</label>
                  <input type="number" name="max_discount" value="<%=Coupon.max_discount%>" class="form-control">

                  <label class="text-light" for="">Create Date</label>
                  <input type="date" name="create_date" value="<%=Coupon.create_date%>" class="form-control">

                  <label class="text-light" for="">Expiry Date</label>
                  <input type="date" name="expiry_date" value="<%=Coupon.expiry_date%>" class="form-control">

                  <button type="submit" class="btn btn-success mt-4">Submit</button>
                </form>
              </div>
            </div>
          </div>